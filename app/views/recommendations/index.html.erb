                <div class="loc-add"><strong>Address: </strong><%= supplements["vicinity"] %></div>
                <div class="loc-rate"><strong>Rating: </strong><%= supplements["rating"] %></div>
              </div>
              <% end %>
            <% end %>
            <% if specific[0]["name"] == "Tai Chi/Matial Arts" %>
