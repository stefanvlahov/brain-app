<div class="page-header">
  <h1>Treatment Recommendations</h1>
</div>

<div class="container">
  <p><strong>Note:</strong> Please consult a <strong>medical professional</strong> before utilizing any of the below treatment options.</p>
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <% @treatments.each_with_index do |specific, idx| %>
      <div class="panel-heading">
        <h4 class="panel-title">
          <a class="treatment-title" data-parent="#accordion" ><%= specific[0]["name"] %></a>
        </h4>
      </div>
      <div class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="description"><%= specific[0]["description"] %></div>
          <br>
            <% if specific[0]["name"] == "Yoga" %>
            <% @yoga_locations.each do |yoga| %>
              <div class="thumbnail col-md-4 col-centered">
                <div class="loc-name"><strong>Name: </strong><%= yoga["name"] %></div>
                <div class="loc-add"><strong>Address: </strong><%= yoga["vicinity"] %></div>
                <div class="loc-rate"><strong>Rating: </strong><%= yoga["rating"] %></div>
              </div>
              <% end %>
            <% end %>
            <% if specific[0]["name"] == "Acupuncture" %>
            <% @acupuncture_locations.each do |acupuncture| %>
              <div class="thumbnail col-md-4 col-centered">
