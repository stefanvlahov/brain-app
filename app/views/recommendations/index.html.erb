<div class="page-header">
  <h1>Treatment Recommendations</h1>
</div>

<div class="container">
  <%= @treatments %>
  <p><strong>Note:</strong> Please consult a <strong>medical professional</strong> before utilizing any of the below treatment options.</p>
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <% @treatments.each_with_index do |specific, idx| %>
        <% specific.each do |recommended| %>
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= idx.to_s %>" ><%= recommended %></a>
        </h4>
      </div>
      <div id="collapse<%= idx.to_s %>" class="panel-collapse collapse in">
        <div class="panel-body"><%= recommended %></div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
